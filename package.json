{
  "name": "@umdnflc/lo-packager",
  "version": "1.0.1",
  "description": "A tool for packaging NFLC Learning Objects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/nflcumd/nflc-lo-packager"
  },
  "author": "Thomas W. Ford",
  "license": "ISC",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "xlo": "./src/cli.js"
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@umdnflc/gulp-scorm-manifest": "git+https://github.com/NFLC-UMD/gulp-scorm-manifest",
    "@umdnflc/scorm-api-wrapper": "git+https://github.com/NFLC-UMD/scorm-api-wrapper.git",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/jest-diff": "^20.0.0"
  }
}
