{
  "name": "@umdnflc/lo-packager",
  "version": "1.0.1",
  "description": "A tool for packaging NFLC Learning Objects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/xlo-cli.ts",
    "testjest": "jest --config jestconfig.json",
    "test": "sudo npm i -g && xlo",
    "build": "tsc -p .",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/nflcumd/nflc-lo-packager"
  },
  "author": "Thomas W. Ford",
  "license": "ISC",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "xlo": "./lib/bin/xlo-cli.js"
  },
  "devDependencies": {
    "@types/jest": "^24.0.3",
    "@types/node": "^11.9.3",
    "@umdnflc/gulp-scorm-manifest": "git+https://github.com/NFLC-UMD/gulp-scorm-manifest",
    "@umdnflc/scorm-api-wrapper": "git+https://github.com/NFLC-UMD/scorm-api-wrapper.git",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/jest-diff": "^20.0.0",
    "axios": "^0.18.0",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^2.19.0",
    "figlet": "^1.2.1",
    "js-yaml": "^3.12.1",
    "make-dir": "^2.0.0",
    "path": "^0.12.7",
    "prompts": "^2.0.2",
    "semver": "^5.6.0"
  }
}
